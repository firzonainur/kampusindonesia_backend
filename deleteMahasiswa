<?php
include 'connection.php';
$nrp = $_GET['nrp'];
$call = mysqli_query($con, "DELETE from Mahasiswa WHERE nrp = $nrp");

if ($call) {?>
	<script>alert('Data berhasil dihapus');window.location.assign('./indexMahasiswa.php')</script>
<?php }else{?>
	<script>alert('Gagal menghapus data');window.location.assign('./indexMahasiswa.php')</script>
<?php }
?>
